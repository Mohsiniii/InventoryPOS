@model List<InventoryPOS.Models.Brand>
@{
    ViewData["Title"] = "Brands";
}

<div class="container mt-3">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Brands List</h3>
            </div>
            <div class="card-body">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Brand ID</th>
                            <th>Brand Name</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var brand in Model)
                        {
                            <tr>
                                <td>@brand.brandID</td>
                                <td>@brand.name</td>
                                <td>@brand.description</td>
                                <td><button class="btn btn-sm btn-info">Edit</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>