@model InventoryPOS.Models.Product

@{
    ViewData["Title"] = "Add Product Variant";
}

<div class="container mt-3">
    <div class="row">
        <div class="col-12">
            <form class="card" asp-action="AddVariant" method="post">
                <div class="card-header">
                    <h3 class="card-title">Add Product</h3>
                </div>
                <div class="card-body">
                    <div class="row row-cards">
                        <div class="col-md-5">
                            <div class="mb-3">
                                <label class="form-label">Product Name</label>
                                <p>@Model.name</p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-3">
                            <div class="mb-3">
                                <label class="form-label">Category</label>
                                <p>@Model.brand.name</p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-3">
                            <div class="mb-3">
                                <label class="form-label">Brand</label>
                                <p>@Model.category.name</p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Size/Weight</label>
                                <input type="text" class="form-control" name="size_weight" placeholder="Enter size/weight..." required>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Unit Price</label>
                                <input type="number" min="1" class="form-control" name="unit_price" placeholder="Enter price..." required>
                            </div>
                        </div>
                        <input type="hidden" name="productID" value="@Model.productID" />
                    </div>
                </div>
                <div class="card-footer text-end">
                    <button type="submit" class="btn btn-primary">Add Variant</button>
                </div>
            </form>
        </div>
    </div>
</div>
