@model List<InventoryPOS.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<div class="container mt-3">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Products List</h3>
            </div>
            <div class="card-body">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Brand</th>
                            <th>Category</th>
                            <th>Size/Weight</th>
                            <th>Unit Price</th>
                            <th>Stock (Units)</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.name</td>
                                <td>@product.brand.name</td> <!-- Replace with actual brand name if available -->
                                <td>@product.category.name</td> <!-- Replace with actual category name if available -->
                                <td><!-- Add Size/Weight Property if available --></td>
                                <td><!-- Add Unit Price Property if available --></td>
                                <td><!-- Add Stock Units Property if available --></td>
                                <td>
                                    <a class="btn btn-sm btn-info" asp-controller="Product" asp-action="Edit" asp-route-id="@product.productID">Edit</a>
                                    <a class="btn btn-sm btn-danger" asp-controller="Product" asp-action="Remove" asp-route-id="@product.productID">Remove</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>